<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Credit card</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.credit_card %></td>
        <td><%= purchase.phone_number %></td>
        <td><%= purchase.address %></td>
        <td><%= purchase.total_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Home', root_path %>