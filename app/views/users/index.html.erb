<% if current_admin.present? %>
  <h1>Users</h1>

  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username , user %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= button_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<%= link_to 'New User', new_user_path %>
<% else %>
 <!-- TODO: Have the check in the controller too (send 403) -->
 <p>You cannot view this page! (Not an admin)</p>
<% end %>

<%= link_to 'Home', root_path %>