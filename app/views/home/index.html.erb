<h1>Home#index</h1>
<% if current_admin.present? %>
Welcome, <%= current_admin.name.capitalize %>
<br>
<br>
<%= link_to 'View Books', books_path %>
<%= link_to 'View Reviews', reviews_path %>
<%= link_to 'Logout', destroy_admin_session_path %>
<%= link_to 'Edit Profile', edit_admin_url(current_admin) %>
<%= link_to 'Show Profile', admin_path(current_admin) %>
