  <!-- add view all profiles button (when viewing edit users), create user button, and delete user button -->


<% elsif current_user.present? %>
Welcome <%= current_user.email %>

<%= link_to 'View Books', books_path %>
<%= link_to 'View Reviews', reviews_path %>
